<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/slideimage"
        android:layout_width="308dp"
        android:layout_height="262dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/backgroundmethodologia"
        android:gravity="center"

        app:srcCompat="@drawable/pinakesparadeigma1" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slideimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="HEADING"
        android:textSize="20sp"
        android:textColor="@color/menuColor"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/slide_descr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/heading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"


        android:padding="35dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colorAccent" />
</RelativeLayout>