<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".menukefalaio7">

    <TextView
        android:id="@+id/titlosmenu7"

        android:layout_width="271dp"
        android:layout_height="90dp"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="59dp"
        android:gravity="center"
        android:text="Σύγχρονα Προγραμματιστικά Περιβάλλοντα"
        android:textColor="@color/menubutons"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/thewria7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/thewria7"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginStart="60dp"

        android:layout_marginTop="96dp"
        android:background="@drawable/button_background"
        android:scaleType="fitCenter"
        android:text="@string/thewria"
        android:textAllCaps="false"
        android:textColor="@color/menubutons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlosmenu7" />

    <Button
        android:id="@+id/methodologia7"
        android:layout_width="278dp"
        android:layout_height="35dp"

        android:layout_marginTop="32dp"
        android:background="@drawable/button_background"
        android:text="@string/methodologia"
        android:textAllCaps="false"
        android:textColor="@color/menubutons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thewria7" />

    <Button
        android:id="@+id/askhseis7"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginStart="60dp"

        android:layout_marginTop="40dp"
        android:background="@drawable/button_background"
        android:text="@string/askiseis"
        android:textAllCaps="false"
        android:textColor="@color/menubutons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/methodologia7" />

</android.support.constraint.ConstraintLayout>