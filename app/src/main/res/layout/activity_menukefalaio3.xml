<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".menukefalaio3">

    <TextView
        android:id="@+id/titlos333"

        android:layout_width="wrap_content"
        android:layout_height="32dp"

        android:layout_marginTop="16dp"
        android:text="Δομές δεδομένων και πίνακες"
        android:textColor="@color/menubutons"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/thewria5"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="71dp"
        android:background="@drawable/button_background"
        android:text="@string/thewria"
        android:textColor="@color/menubutons"

        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlos333" />

    <Button
        android:id="@+id/methodologia3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="71dp"

        android:layout_marginTop="20dp"
        android:layout_marginEnd="71dp"
        android:background="@drawable/button_background"
        android:text="@string/methodologia"
        android:textColor="@color/menubutons"

        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thewria5" />

    <Button
        android:id="@+id/askhseis3"
        android:layout_width="0dp"
        android:layout_height="39dp"

        android:layout_marginStart="71dp"
        android:layout_marginTop="26dp"
        android:textColor="@color/menubutons"

        android:layout_marginEnd="71dp"
        android:background="@drawable/button_background"
        android:text="@string/askiseis"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/methodologia3" />

</android.support.constraint.ConstraintLayout>