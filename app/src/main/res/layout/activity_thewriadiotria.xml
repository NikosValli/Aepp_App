            android:textColor="@color/menuColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView39" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView40"
            app:srcCompat="@drawable/aplhepilogh" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:text="Συνθετη δομή επιλογης"
            android:textColor="@color/menubutons"
            android:textSize="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />


        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="122dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/back"
            android:text="Η δομη σύνθετης επιλογής χρησιμοποιειται στην περιπτωση που επιθυμουμε να εκτελεσουμε εναλλακτικα δυο ομαδες εντολών.Κριτηριο για το ποια ομαδα εντολων θα εκτελεστει αποτελει καποια συνθηκη.Στην περιπτωση που η συνθηκη ισχυει θα εκτελεστει η πρωτη οαμδα εντολων διαφορετικα θα εκτελεστει η δευτερη."


            android:textColor="@color/menuColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView41" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/krithriaalgorithgmou"
            app:srcCompat="@drawable/alithispeudis" />

        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="90dp"
            android:text="Δομη πολλαπλης επιλογής"
            android:textColor="@color/menubutons"
            android:textSize="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" />

        <TextView
            android:id="@+id/textViewsin"
            android:layout_width="wrap_content"
            android:layout_height="122dp"
            android:layout_marginTop="49dp"
            android:background="@drawable/back"
            android:text="Καποια προβλήματα απαιτουν την επιλογη μεταξυ περισσοτερων απο δυο περιπτωσεις.Σε αυτη τη περιπτωση χρησιμοποιουμε τις δομες πολλαπλης επιλογής"
            android:textColor="@color/menuColor"
            android:textSize="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView37" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="324dp"
            app:layout_constraintStart_toStartOf="parent"
