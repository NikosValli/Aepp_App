<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".thewria1_3">

        <TextView
            android:id="@+id/titlos_3_1"
            android:layout_width="385dp"
            android:layout_height="0dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:text="3.2 Πίνακες"
            android:textColor="@color/menubutons"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/erwthsh16"
            android:layout_width="397dp"
            android:layout_height="43dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:text="1. Τι είναι πίνακας?"
            android:textColor="@color/menubutons"
            android:textSize="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titlos_3_1" />

        <TextView
            android:id="@+id/erwthsh16apantisi"
            android:layout_width="349dp"
            android:layout_height="192dp"

            android:layout_marginStart="28dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/back"
            android:text="Πίνακες είναι μια στατική δομή δεδομένων που περιέχουν στοιχεία μόνο του ίδιου τύπου (δηλαδή ακέραιους πραγματικούς κλπ).Η αναφορά στους πίνακες πραγματοποιείται με τη χρήση συμβολικού ονόματος (με κανονονες ονοματολογίας των μεταβλητών ακολουθουμενου απο τονα ριθμο των θέσεων μνήμης που δεσμεύονται και βρίσκονται σε αγκύλη.Ένας πίνακας μπορεί να έχει μια,δυο η περισσότερες διαστάσεις."
            android:textColor="@color/menuColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/erwthsh16" />


        <TextView
            android:id="@+id/erwthsh17"
            android:layout_width="386dp"
            android:layout_height="42dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:text="2.Ποια είναι τα βασικά είδη πινάκων?"
            android:textColor="@color/menubutons"
            android:textSize="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/erwthsh16apantisi" />

        <TextView
            android:id="@+id/apanthsh17"
            android:layout_width="wrap_content"
            android:layout_height="225dp"

            android:background="@drawable/back"
            android:text="Μονοδιάστατοι πίνακες:Για την προσπέλαση ενός μονοδιάστατου πίνακα Ν θέσεων απαιτείται η χρήση μια δομής επανάληψης \n Δισδιάστατοι πίνακες:Στους πίνακες δυο διαστασεων χρειάζονται δυο μετρητές που θα χρησιμοποιηθουν σε δυο δομές επανάληψης Για..απο...μεχρι.Για το κάθε στοιχείο του πίνακα αναφερουμε ΠΡΩΤΑ τη γραμμη και μετα τη στήλη. "
            android:textColor="@color/menuColor"
            android:textSize="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/erwthsh17" />


        <TextView
            android:id="@+id/apanthsh1876"
            android:layout_width="wrap_content"
            android:layout_height="93dp"

            android:layout_marginTop="3dp"
            android:background="@drawable/back"
            android:text="Για πολλες εφαρμογές αννα και για την υλοποιήση δυο ειδικών στατικών δομών δεδομένων της Ουράς και της Στοίβας."
            android:textColor="@color/menuColor"
            android:textSize="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/erwthsh18" />

        <TextView
            android:id="@+id/erwthsh18"
            android:layout_width="386dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="3. Για ποιο λόγο χρησιμοποιούμε τους πίνακες?"
            android:textColor="@color/menubutons"
            android:textSize="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apanthsh17" />


        <Button
            android:id="@+id/button3_2"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="146dp"
            android:layout_height="63dp"

            android:layout_marginTop="46dp"
            android:layout_marginEnd="22dp"
            android:background="@color/colorigotit"
            android:text="Το κατάλαβα !"
            android:textColor="@color/menubutons"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView710" />


        <CheckBox
            android:id="@+id/checkBox3_2"
            android:layout_width="199dp"
            android:layout_height="116dp"
            android:layout_marginTop="340dp"
            android:text="θέλεις να αποθηκευσεις αυτο το κεφάλαιο για επανάληψη?"
            android:textColor="@color/menubutons"
            android:textSize="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apanthsh1876" />

        <TextView
            android:id="@+id/textView710"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/back"
            android:text="Προσοχη! \n\n Ενας δισδιάστατος πίνακας ΝΧΝ ονομάζεται ΤΕΤΡΑΓΩΝΙΚΟΣ. \n\n Τα στοιχεία ενος τετραγωνικού πίνακα με ίδιο αριθμό γραμμης και στήλης βρίσκονται πάνω στη κύρια διαγώνιο και ισχυει (i=j). \n\n  Τα στοιχεία ενος τετραγωνικου πίνακα με Ν Γραμμες και Ν στήλες για τα οποια ισχυέι i+j=Ν+1 βρίσκονται στη δευτερεύουσα διαγώνιο"
            android:textColor="@color/menubutons"
            android:textSize="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/apanthsh1876" />


    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>
